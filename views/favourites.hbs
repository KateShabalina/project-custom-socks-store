<div>
  {{#if empty}}
  <div id="no-have-fav">
    <p class="h2">Вы еще ничего не добавили в избранное</p>
  </div>
  {{else}}
  <div class="favourites-container">
    {{#each listFavourites}}
    <div class="card card-favourite">
      {{{this.style}}}
      <div class="card-body">
        <div class="buttons-favourites">
          <a href="#" class="btn btn-secondary delete-fav-btn" id="{{this.id}}">Удалить</a>
          <a href="#" class="btn btn-success"  id="{{this.id}}">Добавить в корзину</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
